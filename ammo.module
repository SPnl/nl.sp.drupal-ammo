function template_preprocess_overview_amendments(&$variables) {
  if (isset($variables['meeting_id'])) {
    $meeting = entity_load_single('meeting', $variables['meeting_id']);
    $documents_results = db_query("SELECT * FROM {ammo_documents} WHERE meeting_id = :meeting_id ORDER BY title", array(":meeting_id" => $variables['meeting_id']));
    foreach ($documents_results as $document) {
      $amendments_results = db_query("SELECT id FROM {ammo_amendments} WHERE document_id = :document_id ORDER BY chapter, page, line, id", array(":document_id" => $document->id));
      foreach ($amendments_results as $amendment) {
        $amendments[$amendment->id] = $amendment->id;
      }
      $documents[$document->id] = array(
        'id' => $document->id,
        'title' => check_plain($document->title),
        'description' => check_plain($document->description),
        'meeting_id' => check_plain($document->meeting_id),
        'amendments' => $amendments,
      );
    }
    $data['meetings'][$meeting->id] = array(
      'id' => $meeting->id,
      'title' => check_plain($meeting->title),
      'description' => check_plain($meeting->description),
      'date' => $meeting->date,
      'submission_closing_date' => $meeting->submission_closing_date,
      'documents' => $documents,
    );
    $variables = $variables + $data;
  }
}

function template_preprocess_overview_motions(&$variables) {
  if (isset($variables['meeting_id'])) {
    $meeting = entity_load_single('meeting', $variables['meeting_id']);
    $motions_results = db_query("SELECT id FROM {ammo_motions} WHERE meeting_id = :meeting_id ORDER BY branch_display_name", array(":meeting_id" => $meeting->id));
    foreach ($motions_results as $motion) {
      $motions[$motion->id] = $motion->id;
    }
    $data['meetings'][$meeting->id] = array(
      'id' => $meeting->id,
      'title' => check_plain($meeting->title),
      'description' => check_plain($meeting->description),
      'date' => $meeting->date,
      'submission_closing_date' => $meeting->submission_closing_date,
      'motions' => $motions,
    );
    $variables = $variables + $data;
  }
}

function ammo_overview_amendments_form() {
  $form['#prefix'] = '<div id="ajax_form">';
  $form['#suffix'] = '</div>';
  ammo_select_meeting_form('amendment', $form, $form_state);
  $form['submit'] = array
    (
      '#type' => 'submit',
      '#value' => 'kies',
      '#name' => 'action_button',
      '#id' => 'action_button',
      '#ajax' => array
      (
        'wrapper' => 'ajax_form',
        'callback' => 'ammo_overview_amendments_form_ajax_callback',
      ),
    );
  $form['overview'] = array(
    '#type' => 'item',
  );
  return $form;
}

