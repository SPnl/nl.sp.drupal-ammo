function ammo_mail($key, &$message, $params) {
  global $base_url;

  // Set reply-to header.
  $message['headers']['Reply-To'] = $params['reply_to'];

  // Create messages.
  switch($key) {
  case 'change_message':
    // Create messeage
    $type = ($params['entity_type'] == 'amendment') ? 'Wijzigingsvoorstel' : 'Motie';
    $message['subject'] = $type . ' nr. ' . $params['id'] . '.';
    $message['body'][] = $params['markup'];
    $message['body'][] = '<h3>Wijzigingen</h3>';
    foreach ($params['differences'] as $key => $difference) {
      $message['body'][] = '<p>' . $key . ': ' . $difference . '</p>';
    }
    $path = $base_url . '/ammo/' . $params['entity_type'] . 's/' . $params['meeting_id'] . '#' . $params['entity_type'] . $params['entity_id'];
    $message['body'][] = '<p><a href="' . $path . '">Bekijk online</a></p>';
    break;
  case 'withdraw_ownership':
    // Create messeage
    if ($params['rest']) {
      $text = 'niet langer mede ingediend door';
    }
    else {
      $text = 'ingetrokken door';
    }
    $type = ($params['entity_type'] == 'amendment') ? 'Wijzigingsvoorstel' : 'Motie';
    $message['subject'] = $type . ' nr. ' . $params['id'] . ' ' . $text . ' afdeling ' . $params['branch_display_name'];
    $message['body'][] = '<h3>' . ucfirst($text) . ' ' . $params['branch_display_name'] . '</h3>';
    $message['body'][] = $params['markup'];
    break;
  case 'delete_message':
    // Create messeage
    $type = ($params['entity_type'] == 'amendment') ? 'Wijzigingsvoorstel' : 'Motie';
    $message['subject'] = $type . ' nr. ' . $params['id'] . ' is verwijderd.';
    $message['body'][] = $params['mail_text'];
    $message['body'][] = $params['markup'];
    break;
  }
}

